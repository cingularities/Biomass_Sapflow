# Fit log-log model per Species
sapwood_constants <- thermal_data_dry %>%
  group_by(Species) %>%
  do({
    fit <- lm(log(Sapwood_area_thermal) ~ log(DBH), data = .)
    tibble(
      Species = unique(.$Species),
      B1 = coef(fit)[2],                  # slope
      B2 = exp(coef(fit)[1]),              # intercept back-transformed
      R2 = summary(fit)$r.squared,
      n = nrow(.)
    )
  })

