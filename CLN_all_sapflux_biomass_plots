cor_stats <- treering_long_std %>%
  left_join(
    sapflow_Species_mean,
    by = c("YEAR", "Species")
  ) %>%
  group_by(Species) %>%
  summarize(
    r = cor(ring_z, mean_sapflow, use = "complete.obs"),
    .groups = "drop"
  ) %>%
  mutate(
    label = paste0("r = ", round(r, 2))
  )
