library(dplyr)

# ── Filter DBH recon by species-specific DBH values ──────────────────────────
filter_by_species_dbh <- function(df, dbh_list, tol) {
  df %>%
    rowwise() %>%
    filter(
      any(abs(DBH - dbh_list[[Species]]) <= tol)
    ) %>%
    ungroup()
}

MBA_DBH_recon <- MBA_DBH_recon_results %>%
  select(-matches("^year_18|^year_20(0[0-8])")) 

MBB_DBH_recon <- MBB_DBH_recon_results %>%
  select(-matches("^year_18|^year_20(0[0-8])")) 

MBC_DBH_recon <- MBC_DBH_recon_results %>%
  select(-matches("^year_18|^year_20(0[0-8])")) 
# Quick check
cat("MBA rows:", nrow(MBA_DBH_recon), "\n")
cat("MBB rows:", nrow(MBB_DBH_recon), "\n")
cat("MBC rows:", nrow(MBC_DBH_recon), "\n")

MBA_DBH_recon %>% count(Species, DBH)
MBB_DBH_recon %>% count(Species, DBH)
MBC_DBH_recon %>% count(Species, DBH)
library(dplyr)

# Sapwood area calculation function
calc_sapwood <- function(DBH, B1, B2) {
  exp(B1 * log(as.numeric(DBH)) + log(B2))
}

# Apply sapwood calculation to all relevant year columns
MBA_sapwood <- MBA_DBH_recon %>%
  mutate(across(
    3:16,   # columns for years
    ~ case_when(
      Species == "PIPO" ~ calc_sapwood(.x, 1.93, 0.458),
      Species == "PISF" ~ calc_sapwood(.x, 1.69, 0.759),
      Species == "PSME" ~ calc_sapwood(.x, 1.57, 1.36),
      TRUE ~ NA_real_
    )
  ))
MBB_sapwood <- MBB_DBH_recon %>%
  mutate(across(
    3:16,   # columns for years
    ~ case_when(
      Species == "PIPO" ~ calc_sapwood(.x, 1.93, 0.458),
      Species == "PISF" ~ calc_sapwood(.x, 1.69, 0.759),
      Species == "PSME" ~ calc_sapwood(.x, 1.57, 1.36),
      TRUE ~ NA_real_
    )
  ))
MBC_sapwood <- MBC_DBH_recon %>%
  mutate(across(
    3:16,   # columns for years
    ~ case_when(
      Species == "PIPO" ~ calc_sapwood(.x, 1.93, 0.458),
      Species == "PISF" ~ calc_sapwood(.x, 1.69, 0.759),
      Species == "PSME" ~ calc_sapwood(.x, 1.57, 1.36),
      TRUE ~ NA_real_
    )
  ))
# Combine all sites
MB_sapwood_all <- bind_rows(
  MBA = MBA_sapwood,
  MBB  = MBB_sapwood,
  MBC  = MBC_sapwood,
  .id  = "site"
)

























# ----------------------------------------------------------
# STEP 1: Pivot sapwood to long format (one row per tree × year)
# ----------------------------------------------------------
MB_sapwood_long <- MB_sapwood_all %>%
  pivot_longer(
    cols      = starts_with("year_"),
    names_to  = "YEAR",
    values_to = "sapwood_area_cm2"
  ) %>%
  mutate(YEAR = as.integer(str_extract(YEAR, "\\d{4}")))

# Check
head(MB_sapwood_long)
# site | Species | DBH | YEAR | sapwood_area_cm2

# ----------------------------------------------------------
# STEP 2: Match tree-level sapwood to species TOD×DOY×YEAR sapflow
# ----------------------------------------------------------
# species_TOD_DOY_YEAR already has: species, DOY, TOD, YEAR, mean_sapflow, sd_sapflow

tree_water_use <- MB_sapwood_long %>%
  rename(species = Species) %>%
  left_join(
    species_TOD_DOY_YEAR,
    by = c("species", "YEAR"),
    relationship = "many-to-many"   # each tree × year joins to all DOY×TOD rows
  ) %>%
  mutate(
    # whole-tree water use = sapflow (per cm2) × sapwood area (cm2)
    # result in same units as sapflow × cm2 (e.g., g/hr or ml/hr per tree)
    tree_water_use_mean = mean_sapflow * sapwood_area_cm2,
    tree_water_use_sd   = sd_sapflow   * sapwood_area_cm2
  )

# Check structure
glimpse(tree_water_use)
# site | species | DBH | YEAR | sapwood_area_cm2 | DOY | TOD | 
# mean_sapflow | sd_sapflow | tree_water_use_mean | tree_water_use_sd

# ----------------------------------------------------------
# STEP 3: Optional — summarise to species level per DOY×TOD×YEAR
# ----------------------------------------------------------
species_water_use <- tree_water_use %>%
  group_by(species, YEAR, DOY, TOD) %>%
  summarise(
    mean_water_use = mean(tree_water_use_mean, na.rm = TRUE),
    sd_water_use   = sd(tree_water_use_mean,   na.rm = TRUE),
    n_trees        = n_distinct(DBH),
    .groups = "drop"
  )

# ----------------------------------------------------------
# STEP 4: Quick diurnal plot to check output
# ----------------------------------------------------------
species_water_use_TOD <- species_water_use %>%
  group_by(species, TOD) %>%
  summarise(
    mean_water_use = mean(mean_water_use, na.rm = TRUE),
    sd_water_use   = sd(mean_water_use,   na.rm = TRUE),
    .groups = "drop"
  )

ggplot(species_water_use_TOD, 
       aes(x = TOD, y = mean_water_use, color = species, fill = species)) +
  geom_ribbon(aes(ymin = mean_water_use - sd_water_use,
                  ymax = mean_water_use + sd_water_use),
              alpha = 0.2, color = NA) +
  geom_line(linewidth = 1) +
  scale_color_manual(values = species_colors) +
  scale_fill_manual(values  = species_colors) +
  labs(title = "Whole-Tree Water Use by Time of Day",
       x = "Time of Day (half-hour)",
       y = "Water Use (sapflow × sapwood area)",
       color = "Species", fill = "Species") +
  theme_bw()









































# ==========================================================
# WHOLE TREE WATER USE = Sap Flow Density × Sapwood Area
# ==========================================================

# ── 1. Pivot sapwood to long ──────────────────────────────
MB_sapwood_long <- MB_sapwood_all %>%
  pivot_longer(
    cols      = starts_with("year_"),
    names_to  = "Year",
    values_to = "sapwood_area_cm2"
  ) %>%
  mutate(Year = as.integer(str_remove(Year, "year_"))) %>%
  filter(!is.na(sapwood_area_cm2), sapwood_area_cm2 > 0)








# ── 1. Sapwood long format — keep treeID ─────────────────────────────────────
# (you already have this from MB_sapwood_long)
# Make sure it has: treeID, Species, Year, sapwood_area_cm2

# ── 2. Join sap flux density × per-tree sapwood area ─────────────────────────
whole_tree_flow_pertree <- yearly_seasonal_sap %>%
  filter(Species %in% c("PIPO", "PISF", "PSME")) %>%
  left_join(
    MB_sapwood_long %>% select(treeID, Species, Year, sapwood_area_cm2),
    by = c("Species", "YEAR" = "Year")
  ) %>%
  filter(!is.na(sapwood_area_cm2), sapwood_area_cm2 > 0) %>%
  mutate(
    season_hours = case_when(
      season == "pre-monsoon" ~ 91 * 24,
      season == "monsoon"     ~ 92 * 24,
      season == "fall"        ~ 61 * 24,
      season == "winter"      ~ 90 * 24,
      TRUE                    ~ 90 * 24
    ),
    # Per-tree water use using that tree's own sapwood area
    whole_tree_cm3_seas  = seasonal_mean_sapflow * sapwood_area_cm2,
    season = factor(season,
                    levels = c("pre-monsoon", "monsoon", "fall", "winter"))
  )

# ── 3. Sum seasons → annual per-tree water use ────────────────────────────────
annual_water_use_pertree <- whole_tree_flow_pertree %>%
  group_by(Species, treeID, YEAR) %>%
  summarise(
    annual_L = sum(whole_tree_L_seas, na.rm = TRUE),
    .groups  = "drop"
  ) %>%
  filter(annual_L > 0)










# ── Fix step 4: use biomass_growth not Biomass_kg ────────────────────────────
annual_cor_tree <- annual_water_use_pertree %>%
  filter(YEAR != 2022) %>%
  left_join(
    biomass_recon %>% select(Species, treeID, Year, Biomass_kg),
    by = c("Species", "treeID", "YEAR" = "Year")
  ) %>%
  filter(!is.na(annual_L), !is.na(Biomass_kg))

# ── Fix step 5: regress biomass_growth not Biomass_kg ────────────────────────
annual_lm_stats_tree <- annual_cor_tree %>%
  group_by(Species) %>%
  summarise(
    fit    = list(lm(Biomass_kg ~ annual_L)),
    mean_y = mean(Biomass_kg, na.rm = TRUE),
    mean_x = mean(annual_L,       na.rm = TRUE),
    .groups = "drop"
  ) %>%
  mutate(
    r2        = map_dbl(fit, ~ summary(.x)$r.squared),
    r         = map_dbl(fit, ~ sqrt(summary(.x)$r.squared) * sign(coef(.x)[2])),
    p         = map_dbl(fit, ~ summary(.x)$coefficients[2, 4]),
    slope     = map_dbl(fit, ~ coef(.x)[2]),
    intercept = map_dbl(fit, ~ coef(.x)[1]),
    n         = map_int(fit, ~ nrow(.x$model)),
    label     = paste0(
      "slope = ", formatC(slope, format = "e", digits = 2), "\n",
      "mean growth = ",    round(mean_y, 1), " kg yr⁻¹\n",
      "mean water use = ", round(mean_x, 0), " L yr⁻¹\n",
      "r = ",  round(r,  2), "  R² = ", round(r2, 2), "\n",
      "p = ",  ifelse(p < 0.001, "<0.001", round(p, 3)),
      "  n = ", n
    )
  )

# ── Fix step 6: plot biomass_growth on y ─────────────────────────────────────
fig_annual_cor_tree <- ggplot(annual_cor_tree,
                              aes(x = annual_L,
                                  y = Biomass_kg,
                                  color = Species)) +
  geom_smooth(method = "lm", se = TRUE, alpha = 0.15, linewidth = 1.1) +
  geom_point(aes(shape = Species), size = 3, alpha = 0.8) +
  geom_text(aes(label = YEAR), size = 2.8, vjust = -0.8, show.legend = FALSE) +
  geom_text(
    data        = annual_lm_stats_tree,
    aes(label   = label),
    x           = -Inf, y = Inf,
    hjust       = -0.05, vjust = 1.4,
    size        = 3.2, fontface = "italic",
    color       = "grey20",
    inherit.aes = FALSE
  ) +
  facet_wrap(~ Species, scales = "fixed", ncol = 3) +
  scale_color_manual(values = species_colors) +
  scale_shape_manual(values = c("PIPO" = 16, "PISF" = 17, "PSME" = 15)) +
  labs(
    title    = "Annual Water Use vs. Biomass Increment by Species",
    subtitle = "Each point = one tree-year  |  Line = OLS  |  Shading = 95% CI",
    x        = "Annual Whole-Tree Water Use (L yr⁻¹)",
    y        = "Annual Biomass Increment (kg yr⁻¹)"
  ) +
  theme_bw(base_size = 25) +
  theme(
    plot.title       = element_text(face = "bold", size = 16),
    plot.subtitle    = element_text(size = 10, color = "grey35"),
    strip.background = element_rect(fill = "grey90"),
    strip.text       = element_text(face = "bold", size = 13),
    legend.position  = "none",
    panel.grid.minor = element_blank()
  )

windows(); print(fig_annual_cor_tree)
ggsave("Figure_Annual_Sapflow_vs_BiomassGrowth_PerTree.png",
       fig_annual_cor_tree, width = 16, height = 6, dpi = 300)



































































































































































# ── 1. Per-tree seasonal water use ───────────────────────────────────────────
whole_tree_flow_pertree <- yearly_seasonal_sap %>%
  filter(Species %in% c("PIPO", "PISF", "PSME")) %>%
  left_join(
    MB_sapwood_long,
    by = c("Species", "YEAR" = "Year")
  ) %>%
  filter(!is.na(sapwood_area_cm2)) %>%
  mutate(
    season_hours      = case_when(
      season == "pre-monsoon" ~ 91 * 24,
      season == "monsoon"     ~ 92 * 24,
      season == "fall"        ~ 61 * 24,
      season == "winter"      ~ 90 * 24,
      TRUE                    ~ 90 * 24
    ),
    whole_tree_cm3_h  = seasonal_mean_sapflow * sapwood_area_cm2,
    whole_tree_L_day  = whole_tree_cm3_h * 24 / 1000,
    whole_tree_L_seas = whole_tree_L_day * (season_hours / 24),
    season            = factor(season,
                               levels = c("pre-monsoon", "monsoon", "fall", "winter"))
  ) %>%
  filter(YEAR != 2022)

# ── 2. Join per-tree seasonal water use + per-tree annual biomass growth ──────
seasonal_cor_pertree <- whole_tree_flow_pertree %>%
  left_join(
    biomass_recon %>% select(Species, treeID, Year, Biomass_kg),
    by = c("Species", "treeID", "YEAR" = "Year")
  ) %>%
  filter(!is.na(whole_tree_L_seas), !is.na(Biomass_kg))

# Quick check
cat("Rows:",  nrow(seasonal_cor_pertree), "\n")
cat("Trees:", n_distinct(seasonal_cor_pertree$treeID), "\n")
seasonal_cor_pertree %>% count(Species, season)

# ── 3. LM stats per species × season ─────────────────────────────────────────
lm_stats_seasonal <- seasonal_cor_pertree %>%
  group_by(Species, season) %>%
  summarise(
    fit = list(lm(Biomass_kg ~ whole_tree_L_seas)),
    .groups = "drop"
  ) %>%
  mutate(
    r2        = map_dbl(fit, ~ summary(.x)$r.squared),
    r         = map_dbl(fit, ~ sqrt(summary(.x)$r.squared) * sign(coef(.x)[2])),
    p         = map_dbl(fit, ~ summary(.x)$coefficients[2, 4]),
    n         = map_int(fit, ~ nrow(.x$model)),
    full_label = paste0(
      "R² = ", round(r2, 2), "\n",
      "r = ",  round(r,  2), "\n",
      "p = ",  ifelse(p < 0.001, "<0.001", round(p, 3)), "\n",
      "n = ",  n
    )
  )

# ── 4. Figure: facet by season × species ─────────────────────────────────────
fig_seasonal_pertree <- ggplot(seasonal_cor_pertree,
                               aes(x = whole_tree_L_seas,
                                   y = Biomass_kg,
                                   color = Species)) +
  
  geom_point(aes(shape = Species), size = 2.5, alpha = 0.7) +
  
  geom_smooth(method = "lm", se = TRUE, alpha = 0.15, linewidth = 1.1) +
  
  geom_text(
    data        = lm_stats_seasonal,
    aes(label   = full_label),
    x           = -Inf, y = Inf,
    hjust       = -0.05, vjust = 1.3,
    size        = 3.2, fontface = "italic",
    color       = "grey20",
    inherit.aes = FALSE
  ) +
  
  # rows = season, columns = species
  facet_grid(season ~ Species, scales = "free") +
  
  scale_color_manual(values = species_colors) +
  scale_shape_manual(values = c("PIPO" = 16, "PISF" = 17, "PSME" = 15)) +
  
  labs(
    title    = "Seasonal Water Use vs. Annual Biomass Increment — Per Tree",
    subtitle = "Each point = one tree-year  |  Line = OLS  |  Shading = 95% CI",
    x        = "Seasonal Whole-Tree Water Use (L season⁻¹)",
    y        = "Annual Biomass Increment (kg yr⁻¹)"
  ) +
  theme_bw(base_size = 13) +
  theme(
    plot.title       = element_text(face = "bold", size = 15),
    plot.subtitle    = element_text(size = 10, color = "grey35"),
    strip.background = element_rect(fill = "grey90"),
    strip.text       = element_text(face = "bold", size = 11),
    legend.position  = "none",
    panel.grid.minor = element_blank()
  )

windows(); print(fig_seasonal_pertree)
ggsave("Figure_Seasonal_PerTree_WaterUse_vs_Biomass.png",
       fig_seasonal_pertree, width = 14, height = 14, dpi = 300)



















